# Aula 1 - Linguagem de Programação
# Definição de variáveis e tipos de dados

x = 10 
nome  = 'aluno'
nota = 8.75
fez_inscrição = True

print(type(x))
print(type(nome))
print(type(nota))
print(type(fez_inscrição))

nome = input()
print(nome)

# Formatadores de caracteres
print("Olá, %s! Bem-vindo à disciplina de programação. Parabéns pelo seu primeiro Hello World!" % (nome))

# F-string
print(f"Olá, {nome}! Bem-vindo à disciplina de programação. Parabéns pelo seu primeiro Hello World!")